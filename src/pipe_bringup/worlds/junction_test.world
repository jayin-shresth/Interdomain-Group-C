<?xml version="1.0"?>
<sdf version="1.6">
  <world name="junction_test">
    
    <physics type="ode">
      <real_time_update_rate>1000.0</real_time_update_rate>
      <max_step_size>0.001</max_step_size>
    </physics>

    <include>
      <uri>model://sun</uri>
    </include>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Starting corridor - left wall -->
    <model name="start_left">
      <static>true</static>
      <pose>2.5 -0.5 0.5 0 0 0</pose>
      <link name="wall">
        <visual name="visual"><geometry><box><size>5 0.2 1</size></box></geometry>
          <material><ambient>0.8 0.2 0.2 1</ambient></material></visual>
        <collision name="collision"><geometry><box><size>5 0.2 1</size></box></geometry></collision>
      </link>
    </model>

    <!-- Starting corridor - right wall -->
    <model name="start_right">
      <static>true</static>
      <pose>2.5 1.5 0.5 0 0 0</pose>
      <link name="wall">
        <visual name="visual"><geometry><box><size>5 0.2 1</size></box></geometry>
          <material><ambient>0.2 0.2 0.8 1</ambient></material></visual>
        <collision name="collision"><geometry><box><size>5 0.2 1</size></box></geometry></collision>
      </link>
    </model>

    <!-- T-junction at x=5: LEFT opening (gap in left wall from x=4.5 to x=5.5) -->
    <!-- Continue left wall after gap -->
    <model name="after_tjunc_left">
      <static>true</static>
      <pose>7 -0.5 0.5 0 0 0</pose>
      <link name="wall">
        <visual name="visual"><geometry><box><size>4 0.2 1</size></box></geometry>
          <material><ambient>0.8 0.2 0.2 1</ambient></material></visual>
        <collision name="collision"><geometry><box><size>4 0.2 1</size></box></geometry></collision>
      </link>
    </model>

    <!-- Continue right wall -->
    <model name="middle_right">
      <static>true</static>
      <pose>7 1.5 0.5 0 0 0</pose>
      <link name="wall">
        <visual name="visual"><geometry><box><size>4 0.2 1</size></box></geometry>
          <material><ambient>0.2 0.2 0.8 1</ambient></material></visual>
        <collision name="collision"><geometry><box><size>4 0.2 1</size></box></geometry></collision>
      </link>
    </model>

    <!-- Cross junction at x=9: gaps in BOTH walls -->
    <model name="final_left">
      <static>true</static>
      <pose>11.5 -0.5 0.5 0 0 0</pose>
      <link name="wall">
        <visual name="visual"><geometry><box><size>3 0.2 1</size></box></geometry>
          <material><ambient>0.8 0.2 0.2 1</ambient></material></visual>
        <collision name="collision"><geometry><box><size>3 0.2 1</size></box></geometry></collision>
      </link>
    </model>

    <model name="final_right">
      <static>true</static>
      <pose>11.5 1.5 0.5 0 0 0</pose>
      <link name="wall">
        <visual name="visual"><geometry><box><size>3 0.2 1</size></box></geometry>
          <material><ambient>0.2 0.2 0.8 1</ambient></material></visual>
        <collision name="collision"><geometry><box><size>3 0.2 1</size></box></geometry></collision>
      </link>
    </model>

    <!-- End wall (target at x=13) -->
    <model name="end_wall">
      <static>true</static>
      <pose>13 0.5 0.5 0 0 0</pose>
      <link name="wall">
        <visual name="visual"><geometry><box><size>0.2 2 1</size></box></geometry>
          <material><ambient>0.2 0.8 0.2 1</ambient></material></visual>
        <collision name="collision"><geometry><box><size>0.2 2 1</size></box></geometry></collision>
      </link>
    </model>

  </world>
</sdf>

